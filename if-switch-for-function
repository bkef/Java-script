function Rain(){
 	let Rain = parseInt(prompt("is it rainnig? 1-yes / 2-no / 3-we live in vancouver / 4-it is snowing / 5- it is sunny"),10);

 	switch(Rain)
 	{
 		case 1: alert("take an umbrella");
 		break;
 		case 2: alert("dont take an umbrella");
 		break;
 		case 3: alert("always take an umbrella");
 		break;
 		case 4: alert(" make a snowman");
 		break;
 		case 5: alert("wear swimsuit");
 		break;
 		default: Rain();
 	}
 }

